{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"include": ["src/*.ts", "src/*.tsx", "src/*.json"],
		"ignore": ["src/pb/*", "src/platform/native/gen/*"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"ignore": ["src/pb/*", "src/platform/native/gen/*"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
